<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/setup_profile"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/colorTextPrimary"
            android:layout_marginBottom="24dp"
            android:layout_gravity="center"/>

        <!-- Profile Image Picker -->
        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="60dp"
            app:cardElevation="4dp">
            <ImageView
                android:id="@+id/ivProfileImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@android:drawable/ic_menu_camera"
                android:scaleType="centerInside"
                android:background="@color/colorSurface"
                android:padding="30dp" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/layoutPersonalDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/etFullName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/full_name"
                android:textColor="@color/colorTextPrimary"
                android:textColorHint="@color/colorTextSecondary"
                android:backgroundTint="@color/colorAccent"
                android:inputType="textPersonName"/>

            <EditText
                android:id="@+id/etAge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/age"
                android:textColor="@color/colorTextPrimary"
                android:textColorHint="@color/colorTextSecondary"
                android:backgroundTint="@color/colorAccent"
                android:inputType="number"
                android:layout_marginTop="12dp"/>

            <EditText
                android:id="@+id/etBio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/bio_hint"
                android:textColor="@color/colorTextPrimary"
                android:textColorHint="@color/colorTextSecondary"
                android:backgroundTint="@color/colorAccent"
                android:inputType="textMultiLine"
                android:lines="3"
                android:gravity="top|start"
                android:layout_marginTop="12dp"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_games"
            android:textSize="18sp"
            android:textColor="@color/colorTextPrimary"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="12dp"/>

        <!-- Grid of Games with Icons -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center_vertical"
                android:padding="8dp">
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/fortnite"
                    android:scaleType="centerCrop"/>
                <CheckBox
                    android:id="@+id/cbFortnite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fortnite"
                    android:textColor="@color/colorTextPrimary"
                    android:buttonTint="@color/colorAccent"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center_vertical"
                android:padding="8dp">
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/stardew_valley"
                    android:scaleType="centerCrop"/>
                <CheckBox
                    android:id="@+id/cbStardewvalley"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stardew Valley"
                    android:textColor="@color/colorTextPrimary"
                    android:buttonTint="@color/colorAccent"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center_vertical"
                android:padding="8dp">
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/fifa"
                    android:scaleType="centerCrop"/>
                <CheckBox
                    android:id="@+id/cbFifa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fifa"
                    android:textColor="@color/colorTextPrimary"
                    android:buttonTint="@color/colorAccent"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center_vertical"
                android:padding="8dp">
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/minecraft"
                    android:scaleType="centerCrop"/>
                <CheckBox
                    android:id="@+id/cbMinecraft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Minecraft"
                    android:textColor="@color/colorTextPrimary"
                    android:buttonTint="@color/colorAccent"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center_vertical"
                android:padding="8dp">
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/league_of_legends"
                    android:scaleType="centerCrop"/>
                <CheckBox
                    android:id="@+id/cbLoL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="League Of Legends"
                    android:textColor="@color/colorTextPrimary"
                    android:buttonTint="@color/colorAccent"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center_vertical"
                android:padding="8dp">
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/maplestory"
                    android:scaleType="centerCrop"/>
                <CheckBox
                    android:id="@+id/cbmaplestory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MapleStory"
                    android:textColor="@color/colorTextPrimary"
                    android:buttonTint="@color/colorAccent"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center_vertical"
                android:padding="8dp">
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/csgo"
                    android:scaleType="centerCrop"/>
                <CheckBox
                    android:id="@+id/cbCSGO"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Counter Strike GO"
                    android:textColor="@color/colorTextPrimary"
                    android:buttonTint="@color/colorAccent"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center_vertical"
                android:padding="8dp">
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/valorant"
                    android:scaleType="centerCrop"/>
                <CheckBox
                    android:id="@+id/cbValorant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Valorant"
                    android:textColor="@color/colorTextPrimary"
                    android:buttonTint="@color/colorAccent"/>
            </LinearLayout>

        </GridLayout>

        <Button
            android:id="@+id/btnSaveProfile"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/save_continue"
            android:textColor="@color/colorTextPrimary"
            android:backgroundTint="@color/colorAccent"
            android:textStyle="bold"
            app:cornerRadius="28dp"
            android:layout_marginTop="32dp"/>

    </LinearLayout>
</ScrollView>